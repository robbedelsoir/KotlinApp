<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="be.vives.mytodo.screens.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_userActivity"
            app:destination="@id/userActivity" />
        <action
            android:id="@+id/action_mainFragment_to_toDoDetailFragment"
            app:destination="@id/toDoDetailFragment" />
        <action
            android:id="@+id/action_mainFragment_to_toDoListFragment"
            app:destination="@id/toDoListFragment" />
    </fragment>
    <activity
        android:id="@+id/userActivity"
        android:name="be.vives.mytodo.UserActivity"
        android:label="activity_user"
        tools:layout="@layout/activity_user" />
    <fragment
        android:id="@+id/toDoDetailFragment"
        android:name="be.vives.mytodo.screens.tododetail.ToDoDetailFragment"
        android:label="fragment_to_do_detail"
        tools:layout="@layout/fragment_to_do_detail" >
        <argument
            android:name="toDo"
            app:argType="be.vives.mytodo.models.ToDo" />
    </fragment>
    <fragment
        android:id="@+id/toDoListFragment"
        android:name="be.vives.mytodo.screens.todolist.ToDoListFragment"
        android:label="fragment_to_do_list"
        tools:layout="@layout/fragment_to_do_list">
        <action
            android:id="@+id/action_toDoListFragment_to_toDoDetailFragment"
            app:destination="@id/toDoDetailFragment" />
    </fragment>
</navigation>